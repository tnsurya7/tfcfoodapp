# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com/
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# EmailJS Configuration
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# Admin Credentials
NEXT_PUBLIC_ADMIN_USERNAME=your_admin_username
NEXT_PUBLIC_ADMIN_PASSWORD=your_admin_password

# UPI Payment Configuration
NEXT_PUBLIC_UPI_ID=your_upi_id@bank
NEXT_PUBLIC_UPI_MERCHANT_NAME=Your_Business_Name

# TFC UPI Details (Production)
NEXT_PUBLIC_TFC_UPI_ID=your_upi_id@bank
NEXT_PUBLIC_TFC_UPI_NAME=Your_Full_Name
NEXT_PUBLIC_TFC_UPI_MOBILE=your_mobile_number

# Razorpay (Test Mode)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_test_key_id
RAZORPAY_KEY_SECRET=your_razorpay_test_key_secret

# Telegram Notification (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notification (Optional - using SendGrid or similar)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
NOTIFICATION_EMAIL=orders@tfcfood.com

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000